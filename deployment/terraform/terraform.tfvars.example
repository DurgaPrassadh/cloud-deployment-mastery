# Terraform Variables Example
# File: deployment/terraform/terraform.tfvars.example
# Copy this to terraform.tfvars and fill in your values

# AWS Configuration
aws_region  = "us-east-1"
environment = "production"
project_name = "devops-dashboard"

# VPC CIDR Blocks
vpc_cidr              = "10.0.0.0/16"
public_subnet_cidr    = "10.0.1.0/24"
private_backend_cidr  = "10.0.2.0/24"
private_database_cidr = "10.0.3.0/24"

# EC2 Instance Types
frontend_instance_type = "t3.small"
backend_instance_type  = "t3.small"
database_instance_type = "t3.medium"

# SSH Configuration
ssh_public_key = "ssh-rsa AAAA... your-key-name"
allowed_ssh_cidr = ["YOUR.IP.ADDRESS/32"]  # Restrict to your IP!

# Domain (optional)
domain_name = "yourdomain.com"

# Database (sensitive)
db_name     = "devops_dashboard"
db_user     = "devops_user"
db_password = "your_secure_password_here"  # Use secrets manager in production!
